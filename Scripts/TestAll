#!/bin/bash
set -e

dockerfile='Ubuntu.24.04.Dockerfile'

docker build . -f $dockerfile -t swiftwasm:__test

echo $SWIFT_WASM_SDK
docker run --rm \
    -u ubuntu \
    -v=$PWD/Tests:$HOME/swift \
    -w=$HOME/swift \
    swiftwasm:__test \
    /bin/bash -c 'swift build --swift-sdk "$SWIFT_WASM_SDK" --swift-sdks-path "$SWIFT_WASM_SDK_PATH"'
