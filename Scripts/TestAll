#!/bin/bash
set -e

for dockerfile in *.Dockerfile; do
    docker build . -f $dockerfile -t swiftwasm:__test

    echo $SWIFT_WASM_SDK
    docker run --rm \
        -u "$(id -u):$(id -g)" \
        -e HOME=/tmp \
        -v=$PWD/Tests:/swift \
        -w=/swift \
        swiftwasm:__test \
        /bin/bash -c 'swift build --swift-sdk "$SWIFT_WASM_SDK"'

done
